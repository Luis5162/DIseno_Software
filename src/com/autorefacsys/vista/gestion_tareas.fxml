<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controlador.GestionTareasControlador"
            prefHeight="600.0" prefWidth="800.0">
   
   <top>
      <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
         <Label text="Gestión de Tareas" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
         <Label text="Crear, editar y eliminar tareas del sistema" style="-fx-text-fill: #666;"/>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="20" style="-fx-padding: 20;" alignment="TOP_CENTER">
         
         <!-- Panel izquierdo: Lista de tareas -->
         <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: #f9f9f9;" prefWidth="350">
            <Label text="Tareas Existentes:" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            <ListView fx:id="listViewTareas" prefHeight="400" prefWidth="300"/>
            <Button text="Nueva Tarea" onAction="#limpiarSeleccion" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
         </VBox>
         
         <!-- Panel derecho: Formulario de tareas -->
         <VBox spacing="15" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: #f9f9f9;" prefWidth="350">
            <Label text="Datos de la Tarea:" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            
            <VBox spacing="10">
               <Label text="Nombre:" style="-fx-font-weight: bold;"/>
               <TextField fx:id="txtNombre" promptText="Nombre de la tarea" prefWidth="300"/>
               
               <Label text="Descripción:" style="-fx-font-weight: bold;"/>
               <TextArea fx:id="txtDescripcion" promptText="Descripción de la tarea" 
                        prefWidth="300" prefHeight="150" wrapText="true"/>
            </VBox>
            
            <HBox spacing="10" alignment="CENTER">
               <Button fx:id="btnGuardar" text="Guardar Nueva" onAction="#guardarTarea" 
                       style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
               <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizarTarea" 
                       style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8 15;" disable="true"/>
               <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarTarea" 
                       style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 15;" disable="true"/>
            </HBox>
            
            <Label fx:id="lblMensaje" style="-fx-font-weight: bold;" wrapText="true" prefWidth="300"/>
         </VBox>
      </HBox>
   </center>
   
   <bottom>
      <HBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
         <Button text="Volver al Panel Principal" onAction="#volverAlPanelPrincipal" 
                 style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 8 15;"/>
      </HBox>
   </bottom>
</BorderPane>